<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/px12">


    <ImageView
        android:id="@+id/brief_item_iv"
        android:layout_width="@dimen/px334"
        android:layout_height="@dimen/px214"
        android:src="@drawable/ic_loading" />

    <TextView
        android:id="@+id/brief_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/brief_item_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px6"
        android:ellipsize="end"
        android:lines="1"
        android:text="推荐视频"
        android:textColor="@color/text_color"
        android:textSize="13sp" />
</RelativeLayout>