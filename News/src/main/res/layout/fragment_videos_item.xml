<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px332"
    android:layout_marginBottom="@dimen/px14"
    android:layout_marginTop="@dimen/px14">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/video_item_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100"
            android:layout_alignParentBottom="true"
            android:background="@color/text_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/px12">

            <TextView
                android:id="@+id/video_item_tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="播放量："
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/video_item_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px2"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="标题"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/videos_item_play" />
</FrameLayout>
